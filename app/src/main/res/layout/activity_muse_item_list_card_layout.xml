<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:elevation="@dimen/cardview_default_elevation">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#f4f4f4"
        android:id="@+id/cl_muse_item_list_constraint">

        <ImageView
            android:id="@+id/note_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_note_icon" />

        <TextView
            android:id="@+id/tv_items_day_display"
            android:layout_width="180dp"
            android:layout_height="22dp"
            android:layout_marginEnd="112dp"
            android:hint="@string/tv_day_display_hint"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/bt_delete"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/tv_items_display_entry_text"
            android:layout_width="@dimen/tv_display_entry_text_layout_width"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="56dp"
            android:hint="@string/tv_display_entry_text_hint"
            app:layout_constraintEnd_toStartOf="@+id/bt_delete"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="@dimen/bt_delete_width"
            android:layout_height="@dimen/bt_delete_height"
            android:layout_marginEnd="@dimen/bt_delete_margin_end"
            android:background="@drawable/ic_menu_delete"
            android:elevation="@dimen/bt_delete_elevation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_display_entry_text" />


    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>